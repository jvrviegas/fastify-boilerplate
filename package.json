{
  "name": "fastify-boilerplate",
  "version": "1.0.0",
  "description": "fastify + typescript boilerplate",
  "main": "index.js",
  "keywords": [
    "node.js",
    "fastify",
    "typescript",
    "prettier",
    "eslint",
    "swagger"
  ],
  "scripts": {
    "start": "npm run build:prod && cross-env NODE_ENV=production node dist/server.js",
    "dev": "cross-env NODE_ENV=development tsx watch src/server.ts",
    "build:prod": "cross-env NODE_ENV=production tsup src --out-dir dist",
    "check-types": "tsc --noemit",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/ && npm run check-types",
    "lint:fix": "npm run lint --fix"
  },
  "author": "jvrviegas",
  "dependencies": {
    "@fastify/compress": "6.4.0",
    "@fastify/cors": "8.3.0",
    "@fastify/env": "4.2.0",
    "@fastify/helmet": "11.0.0",
    "@fastify/jwt": "7.2.0",
    "@fastify/swagger": "8.8.0",
    "@fastify/swagger-ui": "1.9.3",
    "@fastify/type-provider-typebox": "3.4.0",
    "ajv-errors": "3.0.0",
    "axios": "^1.6.8",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "fastify-plugin": "^4.5.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.2",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "6.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "source-map-support": "0.5.21",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3"
  }
}
